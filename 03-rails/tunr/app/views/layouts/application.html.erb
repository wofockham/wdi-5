<!DOCTYPE html>
<html>
<head>
  <title>Tunr</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <ul>
      <li><%= @current_user.try(:username) %></li>
      <li><%= link_to('Home', '/') %></li>
      <li><%= link_to('Sign up', new_user_path) %></li>
      <li><%= link_to('Sign in', login_path) %></li>
      <li><%= link_to('Logout', login_path, :data => {:method => :delete, :confirm => 'Really logout?'}) %></li>
    </ul>
  </nav>

<%= yield %>

</body>
</html>
