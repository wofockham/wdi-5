<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Butterfly Database</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <div id="container">

    <nav>
      <ul>
        <li><a href="/butterflies">All butterflies</a></li>
        <li><a href="/butterflies/new">New Butterfly</a></li>
        <li>Families:</li>
        <% @families.each do |family| %>
          <li><a href="/butterflies/family/<%= family.family %>"><%= family.family %></a></li>
        <% end %>
      </ul>

      <ul>
        <li><a href="/plants">All plants</a></li>
        <li><a href="/plants/new">New plant</a></li>
      </ul>
    </nav>

    <%= yield %>
  </div>

</body>
</html>