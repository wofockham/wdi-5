<form action="/plants/<%= @plant.id %>" method="post">
  <label for="name">Name: </label>
  <input type="text" id="name" name="name" value="<%= @plant.name %>">

  <label for="image">Image: </label>
  <input type="url" id="image" name="image" value="<%= @plant.image %>">

  <button>Update plant</button>
</form>
